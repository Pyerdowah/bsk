<Window x:Class="bsk.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bsk"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="800"
        TextElement.Foreground="White"
        Background="RoyalBlue">
    <Grid>
        <TextBlock FontSize="24" HorizontalAlignment="Center">Please enter password to decrypt your RSA private key
           <LineBreak /> or create a new one and encrypt with typed password.
        </TextBlock>
        <PasswordBox FontSize="24" Height="40" Width="300"></PasswordBox>
        <Button  FontSize="24" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="80" Width="300" Margin="20 0 0 20">Decrypt</Button>
        <Button  FontSize="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="80" Width="300" Margin="0 0 20 20">Create new</Button>
        
    </Grid>
</Window>
